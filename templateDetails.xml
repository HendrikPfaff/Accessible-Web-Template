<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="template">
    <name>Accessible Web Template</name>
    <creationDate>2020-11-22</creationDate>
    <author>Hendrik Pfaff</author>
    <authorEmail>email@hendrik-pfaff.de</authorEmail>
    <authorUrl>https://www.hendrik-pfaff.de</authorUrl>
    <copyright>Hendrik Pfaff 2020</copyright>
    <license>GNU/GPL</license>
    <version>3.0</version>
    <description>A WCAG 2.1 AAA and ADA compliant Joomla Template</description>
    <files>
        <folder>css</folder>
        <folder>fonts</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>javascript</folder>
        <folder>language</folder>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
    </files>
    <positions>
        <position>title</position>
        <position>top</position>
        <position>footer</position>
        <position>social-icons</position>
        <position>top-menu</position>
        <position>jumbotron</position>
        <position>off-menu</position>
        <position>side-menu</position>
        <position>footer-menu</position>
    </positions>

    <languages folder="language">
        <language tag="de-DE">de-DE/de-DE.tpl_accessiblewebtemplate.ini</language>
        <language tag="de-DE">de-DE/de-DE.tpl_accessiblewebtemplate.sys.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_accessiblewebtemplate.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_accessiblewebtemplate.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="siteTitle"
                       type="text"
                       label="TPL_ADMIN_SITE_TITLE"
                       description="TPL_ADMIN_SITE_TITLE_DESC"
                       default=""
                />
                <field name="siteLogo"
                       type="media"
                       label="TPL_ADMIN_LOGO"
                       description="TPL_ADMIN_LOGO_DESC"
                       default=""
                />
                <field name="siteWebLink"
                       type="text"
                       label="TPL_ADMIN_WEBLINK"
                       description="TPL_ADMIN_WEBLINK_DESC"
                       default="https://"
                />
                <field name="siteOwner"
                       type="text"
                       label="TPL_ADMIN_OWNER"
                       description="TPL_ADMIN_OWNER_DESC"
                       default="Jon Doe"
                />
                <field name="contactEmail"
                       type="text"
                       label="TPL_ADMIN_CONTACT_EMAIL"
                       description="TPL_ADMIN_CONTACT_EMAIL_DESC"
                       default="info@email.com"
                />
                <field name="contactPhone"
                       type="text"
                       label="TPL_ADMIN_CONTACT_PHONE"
                       description="TPL_ADMIN_CONTACT_PHONE_DESC"
                       default="+49-555-12345"
                />
                <field name="contactAddress"
                       type="text"
                       label="TPL_ADMIN_CONTACT_ADDRESS"
                       description="TPL_ADMIN_CONTACT_ADDRESS_DESC"
                       default="Street, No., Zip, State"
                />
            </fieldset>
        </fields>
    </config>
</extension>