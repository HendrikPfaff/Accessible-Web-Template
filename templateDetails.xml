<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="template">
    <name>Accessible Web Template</name>
    <creationDate>2020-11-22</creationDate>
    <author>Hendrik Pfaff</author>
    <authorEmail>email@hendrik-pfaff.de</authorEmail>
    <authorUrl>https://www.hendrik-pfaff.de</authorUrl>
    <copyright>Hendrik Pfaff 2020</copyright>
    <license>GNU/GPL</license>
    <version>3.0</version>
    <description>A WCAG 2.1 AAA and ADA compliant Joomla Template</description>
    <files>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <folder>images</folder>
        <folder>css</folder>
        <folder>javascript</folder>
        <folder>fonts</folder>
    </files>
    <positions>
        <position>title</position>
        <position>top</position>
        <position>footer</position>
        <position>social-icons</position>
        <position>top-menu</position>
        <position>jumbotron</position>
        <position>off-menu</position>
        <position>side-menu</position>
        <position>footer-menu</position>
    </positions>

    <languages folder="language">
        <language tag="de-DE">de-DE/de-DE.tpl_accessible.ini</language>
        <language tag="de-DE">de-DE/de-DE.tpl_accessible.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="siteTitle"
                       type="text"
                       label="Title"
                       description="Global title of the site"
                       default=""
                />
                <field name="logo"
                       type="media"
                       label="Logo"
                       description="Global template logo"
                       default=""
                />
                <field name="contactEmail"
                       type="text"
                       label="Contact email"
                       description="Displayed email address for contact"
                       default="info@email.com"
                />
                <field name="contactPhone"
                       type="text"
                       label="Contact Phone No."
                       description="Displayed phone number for contact"
                       default="+49-555-12345"
                />
                <field name="contactAddress"
                       type="text"
                       label="Contact Address"
                       description="Displayed address for contact"
                       default="Street, No., Zip, State"
                />
            </fieldset>
        </fields>
    </config>
</extension>